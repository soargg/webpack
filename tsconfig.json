{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "base",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
    },
    "include": [
        "./src"
    ],
    "exclude":[
        "lib",
        "node_modules",
    ]
}